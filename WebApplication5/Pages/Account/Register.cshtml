@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign up";
    ViewData["ShowSocialIcons"] = false;
}

<section id="signup" class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="text-left mb-4">Create Account</h1>
            <p class="text-left mb-4">Already have an account? <a asp-page="/Account/Login">Sign in here</a>.</p>
            <form id="registrationForm" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="Input.FirstName" class="form-label font-weight-bold">First Name</label>
                        <input asp-for="Input.FirstName" class="form-control" placeholder="Enter your first name">
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Input.LastName" class="form-label font-weight-bold">Last Name</label>
                        <input asp-for="Input.LastName" class="form-control" placeholder="Enter your last name">
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label font-weight-bold">Email Address</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter your email address">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label font-weight-bold">Password</label>
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Create a password" minlength="8">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label font-weight-bold">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="Terms" asp-for="Input.Terms">
                    <label class="form-check-label" for="Terms">I agree to the terms and conditions</label>
                    <span asp-validation-for="Input.Terms" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
                <p class="text-center mt-4">Already have an account? <a asp-page="/Account/Login">Sign in</a></p>
            </form>
        </div>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
</section>

