@page
@using WebApplication5.Models
@model WebApplication5.Pages.IndexModel

<form method="post">
    <div class="form-group">
        <label>Email:</label>
        <input type="email" asp-for="NewsletterSignupModel.Email" class="form-control" required>
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="NewsletterSignupModel.DailyNewsletter">
        <label class="form-check-label" asp-for="NewsletterSignupModel.DailyNewsletter">Daily Newsletter</label>
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="NewsletterSignupModel.AdvertisingUpdates">
        <label class="form-check-label" asp-for="NewsletterSignupModel.AdvertisingUpdates">Advertising Updates</label>
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="NewsletterSignupModel.WeekInReview">
        <label class="form-check-label" asp-for="NewsletterSignupModel.WeekInReview">Week in Review</label>
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="NewsletterSignupModel.EventUpdates">
        <label class="form-check-label" asp-for="NewsletterSignupModel.EventUpdates">Event Updates</label>
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="NewsletterSignupModel.StartupWeekly">
        <label class="form-check-label" asp-for="NewsletterSignupModel.StartupWeekly">Startup Weekly</label>
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="NewsletterSignupModel.Podcasts">
        <label class="form-check-label" asp-for="NewsletterSignupModel.Podcasts">Podcasts</label>
    </div>

    <button type="submit" class="btn btn-primary">Subscribe</button>
</form>


